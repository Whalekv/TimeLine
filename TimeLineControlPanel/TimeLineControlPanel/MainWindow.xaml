<Window x:Class="TimeLineControlPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeLine Control Panel" Height="340" Width="405"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Icon="TimeLine.ico">

    <Window.Resources>
        <!-- 定义圆角 TextBox 样式 -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 下拉框样式 #005AA1 -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <!-- 渐变背景 -->
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#003DD7" Offset="0"/>
                        <GradientStop Color="#0078D7" Offset="1"/>

                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="White"/>
                        <!-- 白色文本 -->
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                                <!-- 悬停时深灰色背景 -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- 外层边框，带圆角 -->
                            <Border x:Name="Border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                                <Grid>
                                    <!-- ToggleButton 覆盖整个区域，无背景和边框 -->
                                    <ToggleButton x:Name="ToggleButton"
                                                  BorderThickness="0"
                                                  Background="Transparent"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <!-- 透明背景，保留交互 -->
                                                            <Border Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <!-- 移除 Hover 蓝色，不设置任何触发器 -->
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>

                                    <!-- 显示选中项的文本 -->
                                    <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="5,0,5,0"/>
                                    <!-- 下拉弹出框 -->
                                    <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                        <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                            <Border x:Name="DropDownBorder"
                                            Background="{TemplateBinding Background}" 
                                                BorderThickness="1"
                                            BorderBrush="#D3D3D3"
                                            CornerRadius="5">
                                                <ScrollViewer Margin="4,6,4,6">
                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                </ScrollViewer>
                                            </Border>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- 鼠标悬停时降低透明度 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <!-- 禁用时变灰 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                <Setter TargetName="DropDownBorder" Property="Background" Value="#F0F0F0"/>
                                <!-- 禁用时下拉框也变灰 -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        <!-- 按钮样式 -->
        <Style x:Key="StartButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <!-- 按钮渐变：紫色到粉色 -->
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0078D7" Offset="0"/>
                        <GradientStop Color="#FF69B4" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <!-- 圆角按钮 -->
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
        CornerRadius="10" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Window.Background>
        <!-- 渐变背景：浅灰到白色，现代感 -->
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E8ECEF" Offset="0"/>
            <GradientStop Color="#FFFFFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,15,0,0" Height="245" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 任务时间输入 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="TaskTimeTextBoxHour1" Text="0" Width="60" Height="70" FontFamily="Segoe UI" 
             FontSize="36" Padding="5" Margin="5,10" BorderThickness="1" BorderBrush="#D3D3D3" MaxLength="1"
             Style="{StaticResource RoundedTextBoxStyle}" TextAlignment="Center" VerticalContentAlignment="Center" 
             PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TextBox_TextChanged" GotFocus="TextBox_GotFocus" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
            <TextBox x:Name="TaskTimeTextBoxHour2" Text="0" Width="60" Height="70" FontFamily="Segoe UI" 
             FontSize="36" Padding="5" Margin="5,10" BorderThickness="1" BorderBrush="#D3D3D3" MaxLength="1"
             Style="{StaticResource RoundedTextBoxStyle}" TextAlignment="Center" VerticalContentAlignment="Center"
             PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TextBox_TextChanged" GotFocus="TextBox_GotFocus" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
            <TextBlock Text=":" FontFamily="Segoe UI" FontSize="52" Margin="10,0" />
            <TextBox x:Name="TaskTimeTextBoxMin1" Text="0" Width="60" Height="70" FontFamily="Segoe UI" 
             FontSize="36" Padding="5" Margin="5,10" BorderThickness="1" BorderBrush="#D3D3D3" MaxLength="1"
             Style="{StaticResource RoundedTextBoxStyle}" TextAlignment="Center" VerticalContentAlignment="Center" 
             PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TextBox_TextChanged" GotFocus="TextBox_GotFocus" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
            <TextBox x:Name="TaskTimeTextBoxMin2" Text="0" Width="60" Height="70" FontFamily="Segoe UI" 
            FontSize="36" Padding="5" Margin="5,10" BorderThickness="1" BorderBrush="#D3D3D3" MaxLength="1"
             Style="{StaticResource RoundedTextBoxStyle}" TextAlignment="Center" VerticalContentAlignment="Center" 
             PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TextBox_TextChanged" GotFocus="TextBox_GotFocus" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
        </StackPanel>

        <!-- 任务名称输入 -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBox x:Name="TaskNameTextBox" Width="311" Height="60" FontFamily="Segoe UI" FontSize="24"
                     Padding="5" BorderThickness="1" BorderBrush="#D3D3D3" 
                     VerticalContentAlignment="Center" 
                     Style="{StaticResource RoundedTextBoxStyle}" />
        </StackPanel>

        <!-- 操作栏 -->
        <!-- 模式选择和启动按钮 -->
        <Grid Grid.Row="2" Margin="0,10,0,0" Width="311">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- ModeComboBox 宽度 -->
                <ColumnDefinition Width="*"/>
                <!-- 中间填充空间 -->
                <ColumnDefinition Width="Auto"/>
                <!-- StartButton 宽度 -->
            </Grid.ColumnDefinitions>
            <!-- 模式选择下拉框 -->
            <ComboBox x:Name="ModeComboBox" Width="100" Height="40" 
              Style="{StaticResource RoundedComboBoxStyle}" 
              Grid.Column="0">
                <ComboBoxItem Content="渐短" IsSelected="True"/>
                <ComboBoxItem Content="渐长"/>
            </ComboBox>
            <!-- 启动按钮 -->
            <Button x:Name="StartButton" Content="开始任务" Width="120" Height="40" 
            FontFamily="Segoe UI" FontSize="16" Click="StartButton_Click" 
            Style="{StaticResource StartButtonStyle}" Grid.Column="2"/>
        </Grid>


    </Grid>
</Window>